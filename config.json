{
  "name": "Auto Trading",
  "n_gpu": 2,

  "arch": {
    "type": "FinCNN",
    "args": {"num_classes": 2}
  },
  "data_loader": {
    "type": "FinDataLoader",
    "args": {
      "data_root": "data/raw",
      "batch_size": 1,
      "shuffle": false,
      "validation_split": 0.2,
      "num_workers": 0,
      "window_size": [1, 0],
      "sliding_size" : [0, 30],
      "target_size": [0, 30]
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 0.001,
      "weight_decay": 0,
      "amsgrad": true
    }
  },
  "loss": "cross_entropy",
  "metrics": ["accuracy", "top_k_acc"],
  "lr_scheduler": {
    "type": "StepLR",
    "args": {
      "step_size": 50,
      "gamma": 0.1
    }
  },
  "trainer": {
    "epochs": 100,

    "save_dir": "saved/",
    "save_period": 1,
    "verbosity": 2,

    "monitor": "min val_loss",
    "early_stop": 10,

    "tensorboard": true
  }
}
